                                    <TableView fx:id="table_zh">
                                       <columns>
                                          <TableColumn prefWidth="75.0" text="%nation" />
                                          <TableColumn prefWidth="400.0" text="%name" />
                                          <TableColumn fx:id="column_zh" prefWidth="300.0" text="%tags" />
                                       </columns>
                                       <contextMenu>
                                          <ContextMenu>
                                             <items>
