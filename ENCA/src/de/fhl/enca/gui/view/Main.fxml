<BorderPane style="-fx-border-color: #FFFFFF;" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.fhl.enca.gui.view.MainController">
   <top>
      <MenuBar style="-fx-background-color: #FFFFFF;">
        <menus>
          <Menu mnemonicParsing="false" text="%view">
            <items>
              <MenuItem fx:id="detail" mnemonicParsing="false" onAction="#detail" text="%detail" />
                  <MenuItem mnemonicParsing="false" onAction="#userCentreToMemo" text="%memos" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="%modify">
              <items>
                  <MenuItem fx:id="modifyCA" mnemonicParsing="false" onAction="#modifyCA" text="%modifyCA" />
                <MenuItem mnemonicParsing="false" onAction="#modifyTag" text="%modifyTag" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="%add">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#addCleaningAgent" text="%addCA" />
                  <MenuItem mnemonicParsing="false" onAction="#addTag" text="%addTag" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="%system">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#userCentre" text="%userCenter" />
                  <MenuItem mnemonicParsing="false" onAction="#userCentre" text="%changeLanguage" />
                  <MenuItem mnemonicParsing="false" onAction="#manual" text="%manual" />
                  <MenuItem mnemonicParsing="false" onAction="#about" text="%about" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <GridPane style="-fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints />
          <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="ALWAYS" />
        </rowConstraints>
         <children>
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                  <RowConstraints vgrow="ALWAYS" />
               </rowConstraints>
               <children>
                  <ListView fx:id="list_room" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                     <contextMenu>
                        <ContextMenu>
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#modifyTag" text="%modifyTag" />
                          </items>
                        </ContextMenu>
                     </contextMenu></ListView>
                  <ListView fx:id="list_items" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                     <contextMenu>
                        <ContextMenu>
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#modifyTag" text="%modifyTag" />
                           </items>
                        </ContextMenu>
                     </contextMenu></ListView>
                  <ListView fx:id="list_others" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </GridPane.margin>
                     <contextMenu>
                        <ContextMenu>
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#modifyTag" text="%modifyTag" />
                           </items>
                        </ContextMenu>
                     </contextMenu></ListView>
                  <Label fx:id="room" alignment="CENTER" prefHeight="25.0" prefWidth="90.0" text="%room" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="items" alignment="CENTER" prefHeight="25.0" prefWidth="93.0" text="%items" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="others" alignment="CENTER" prefHeight="25.0" prefWidth="92.0" text="%others" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </GridPane>
            <GridPane GridPane.columnIndex="1">
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="1.7976931348623157E308" vgrow="NEVER" />
                  <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="600.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label fx:id="count" textFill="GREY" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets right="20.0" />
                     </GridPane.margin>
                  </Label>
                  <TabPane fx:id="tabPane" prefWidth="1000.0" style="-fx-background-color: #FFFFFF;" tabClosingPolicy="UNAVAILABLE" GridPane.rowIndex="2">
                     <tabs>
                        <Tab text="%english">
                           <content>
                              <TableView fx:id="table_en">
                                 <columns>
                                    <TableColumn prefWidth="75.0" text="%nation" />
                                    <TableColumn prefWidth="500.0" text="%name" />
                                    <TableColumn fx:id="column_en" prefWidth="400.0" text="%tags" />
                                 </columns>
                                 <contextMenu>
                                    <ContextMenu>
                                       <items>
                                          <MenuItem fx:id="detail_en" mnemonicParsing="false" onAction="#detail" text="%detail" />
                                          <MenuItem fx:id="modifyCA_en" mnemonicParsing="false" onAction="#modifyCA" text="%modifyCA" />
                                       </items>
                                    </ContextMenu>
                                 </contextMenu>
                              </TableView>
                           </content>
                        </Tab>
                        <Tab text="%german">
                           <content>
                              <TableView fx:id="table_de">
                                 <columns>
                                    <TableColumn prefWidth="75.0" text="%nation" />
                                    <TableColumn prefWidth="500.0" text="%name" />
                                    <TableColumn fx:id="column_de" prefWidth="400.0" text="%tags" />
                                 </columns>
                                 <contextMenu>
                                    <ContextMenu>
                                       <items>
                                          <MenuItem fx:id="detail_de" mnemonicParsing="false" onAction="#detail" text="%detail" />
                                          <MenuItem fx:id="modifyCA_de" mnemonicParsing="false" onAction="#modifyCA" text="%modifyCA" />
                                       </items>
                                    </ContextMenu>
                                 </contextMenu>
                              </TableView>
                           </content>
                        </Tab>
                        <Tab text="%chinese">
                           <content>
                              <TableView fx:id="table_zh">
                                 <columns>
                                    <TableColumn prefWidth="75.0" text="%nation" />
                                    <TableColumn prefWidth="500.0" text="%name" />
                                    <TableColumn fx:id="column_zh" prefWidth="400.0" text="%tags" />
                                 </columns>
                                 <contextMenu>
                                    <ContextMenu>
                                      <items>
                                        <MenuItem fx:id="detail_zh" mnemonicParsing="false" onAction="#detail" text="%detail" />
                                          <MenuItem fx:id="modifyCA_zh" mnemonicParsing="false" onAction="#modifyCA" text="%modifyCA" />
                                      </items>
                                    </ContextMenu>
                                 </contextMenu>
                              </TableView>
                           </content>
                        </Tab>
                     </tabs>
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </GridPane.margin>
                  </TabPane>
                  <GridPane alignment="CENTER" style="-fx-background-color: #FFFFFF;">
                     <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                        <ColumnConstraints hgrow="NEVER" />
                        <ColumnConstraints hgrow="NEVER" />
                        <ColumnConstraints hgrow="NEVER" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <TextField fx:id="textField" promptText="%searchPrompt" GridPane.columnIndex="1">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin></TextField>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#initMain" prefHeight="25.0" prefWidth="75.0" text="%clear" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin></Button>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#search" prefHeight="25.0" prefWidth="75.0" text="%search" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin></Button>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#userCentre" prefHeight="25.0" prefWidth="30.0" text="ðŸ‘¨" textOverrun="CLIP" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
                           </GridPane.margin></Button>
                        <SplitMenuButton fx:id="add" alignment="CENTER" mnemonicParsing="false" onAction="#add" prefWidth="100.0" text="%add" GridPane.columnIndex="3">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#addCleaningAgent" text="%addCA" />
                            <MenuItem mnemonicParsing="false" onAction="#addTag" text="%addTag" />
                          </items>
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin>
                        </SplitMenuButton>
                     </children>
                  </GridPane>
               </children>
            </GridPane>
         </children>
      </GridPane>
   </center>
</BorderPane>
