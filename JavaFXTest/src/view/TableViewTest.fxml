<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.60" fx:controller="view.TableViewTestController">
   <center>
      <AnchorPane prefHeight="500.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tableView" layoutX="100.0" layoutY="100.0" prefHeight="300.0" prefWidth="300.0">
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="scoreColumn" prefWidth="75.0" text="Score" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Button fx:id="confirmButton" layoutX="221.0" layoutY="426.0" mnemonicParsing="false" onAction="#confirm" text="Confirm" />
            <Label fx:id="label" layoutX="399.0" layoutY="430.0" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
