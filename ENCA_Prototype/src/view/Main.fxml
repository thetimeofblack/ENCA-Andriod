                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="43.0" minHeight="43.0" prefHeight="43.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="553.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <ListView fx:id="roomTagListView" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1" />
                  <ListView fx:id="itemTagListView" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <ListView fx:id="otherTaglistView" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #FFFFFF;">
                     <children>
                        <Label layoutX="39.0" layoutY="14.0" prefHeight="17.0" prefWidth="54.0" text="%room" textAlignment="CENTER" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #FFFFFF;" GridPane.columnIndex="1">
                     <children>
                        <Label layoutX="44.0" layoutY="14.0" prefHeight="17.0" prefWidth="44.0" text="%item" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #FFFFFF;" GridPane.columnIndex="2">
                     <children>
                        <Label layoutX="43.0" layoutY="14.0" prefHeight="17.0" prefWidth="46.0" text="%other" />
                     </children>
                  </AnchorPane>
               </children>
            </GridPane>
            <SplitPane dividerPositions="0.1" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" style="-fx-background-color: #FFFFFF;">
              <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0" style="-fx-background-color: #FFFFFF;">
                     <children>
                        <TextField layoutX="85.0" layoutY="16.0" prefHeight="25.0" prefWidth="212.0" promptText="%searchPrompt" />
                        <Button layoutX="305.0" layoutY="16.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="77.0" text="%search" />
                        <Button fx:id="clearButton" layoutX="14.0" layoutY="16.0" mnemonicParsing="false" onAction="#clear" prefHeight="25.0" prefWidth="58.0" text="%clear" />
                     </children></AnchorPane>
                  <TabPane prefHeight="328.0" prefWidth="476.0" style="-fx-background-color: #FFFFFF;" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                      <Tab text="%english" />
                      <Tab text="%german" />
                    </tabs>
                  </TabPane>
              </items>
            </SplitPane>
         </items>
      </SplitPane>
   </center>
