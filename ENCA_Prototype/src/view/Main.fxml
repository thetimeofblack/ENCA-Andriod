   <center>
      <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" style="-fx-border-color: #FFFFFF;" BorderPane.alignment="CENTER">
         <items>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
