<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CleaningAgentDetailController">
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints valignment="TOP" vgrow="ALWAYS" />
        </rowConstraints>
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints fillHeight="false" maxHeight="-Infinity" minHeight="-Infinity" vgrow="NEVER" />
              </rowConstraints>
               <children>
                  <TabPane style="-fx-background-color: #FFFFFF;" tabClosingPolicy="UNAVAILABLE" GridPane.hgrow="ALWAYS" GridPane.valignment="TOP" GridPane.vgrow="ALWAYS">
                     <tabs>
                        <Tab text="%english">
                           <content>
                              <GridPane>
                                 <columnConstraints>
                                    <ColumnConstraints maxWidth="125.0" minWidth="125.0" prefWidth="125.0" />
                                    <ColumnConstraints hgrow="ALWAYS" prefWidth="500.0" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints vgrow="ALWAYS" />
                                    <RowConstraints fillHeight="false" vgrow="ALWAYS" />
                                    <RowConstraints fillHeight="false" vgrow="ALWAYS" />
                                    <RowConstraints fillHeight="false" vgrow="ALWAYS" />
                                 </rowConstraints>
                                 <children>
                                    <Label text="%name" underline="true" GridPane.valignment="CENTER">
                                       <GridPane.margin>
                                          <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                       </GridPane.margin>
                                    </Label>
                                    <Label fx:id="name_en" wrapText="true" GridPane.columnIndex="1" GridPane.valignment="CENTER">
                                       <GridPane.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </GridPane.margin>
                                       <font>
                                          <Font name="System Bold" size="18.0" />
                                       </font>
                                    </Label>
                                    <Label text="%tags" underline="true" GridPane.rowIndex="1" GridPane.valignment="TOP">
                                       <GridPane.margin>
                                          <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                       </GridPane.margin>
                                    </Label>
                                    <FlowPane fx:id="tags_en" hgap="4.0" rowValignment="TOP" vgap="4.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="TOP" GridPane.vgrow="ALWAYS">
                                       <GridPane.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </GridPane.margin>
                                    </FlowPane>
                                    <Label text="%description" underline="true" GridPane.rowIndex="2" GridPane.valignment="TOP">
                                       <GridPane.margin>
                                          <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                       </GridPane.margin>
                                    </Label>
                                    <Label fx:id="description_en" alignment="TOP_LEFT" wrapText="true" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.valignment="TOP" GridPane.vgrow="ALWAYS">
                                       <GridPane.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </GridPane.margin>
                                    </Label>
                                    <Label text="%instruction" underline="true" GridPane.rowIndex="3" GridPane.valignment="TOP">
                                       <GridPane.margin>
                                          <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                       </GridPane.margin>
                                    </Label>
                                    <Label fx:id="instruction_en" alignment="TOP_LEFT" wrapText="true" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.valignment="TOP" GridPane.vgrow="ALWAYS">
                                       <GridPane.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </GridPane.margin>
                                    </Label>
                                 </children>
                              </GridPane>
                           </content>
                        </Tab>
                        <Tab text="%german" />
                     </tabs>
                  </TabPane>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#modify" prefHeight="25.0" prefWidth="75.0" text="%modify" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </GridPane.margin>
                  </Button>
               </children>
            </GridPane>
            <GridPane GridPane.columnIndex="1">
               <columnConstraints>
                  <ColumnConstraints maxWidth="220.0" minWidth="220.0" prefWidth="220.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints maxHeight="200.0" minHeight="200.0" prefHeight="200.0" />
                  <RowConstraints />
                  <RowConstraints vgrow="ALWAYS" />
                  <RowConstraints />
               </rowConstraints>
               <children>
                  <ImageView fx:id="imageView" fitHeight="180.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin>
                  </ImageView>
                  <GridPane GridPane.rowIndex="1">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" />
                        <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" />
                        <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" />
                     </rowConstraints>
                     <children>
                        <Label text="%applicationTime" underline="true" wrapText="true">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin>
                        </Label>
                        <Label fx:id="applicationTime" GridPane.columnIndex="1">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin>
                        </Label>
                        <Label text="%frequency" underline="true" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin>
                        </Label>
                        <Label fx:id="frequency" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin>
                        </Label>
                        <Label text="%rate" underline="true" GridPane.rowIndex="2">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin>
                        </Label>
                        <Label fx:id="rate" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin>
                        </Label>
                     </children>
                  </GridPane>
                  <TextArea fx:id="memo" prefHeight="75.0" promptText="%memo" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
                     <GridPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </GridPane.margin>
                  </TextArea>
                  <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.rowIndex="3">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                     </padding>
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#clear" prefHeight="25.0" prefWidth="75.0" text="%clear" />
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#save" prefHeight="25.0" prefWidth="75.0" text="%save" />
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </children>
      </GridPane>
   </center>
</BorderPane>
