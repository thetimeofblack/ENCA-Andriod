                        <Label alignment="CENTER" layoutX="5.0" layoutY="17.0" prefHeight="17.0" prefWidth="79.0" text="%username" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
                     <children>
                        <TextField fx:id="usernameTextField" layoutX="13.0" layoutY="13.0" prefHeight="25.0" prefWidth="137.0" promptText="%valid" />
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                     <children>
