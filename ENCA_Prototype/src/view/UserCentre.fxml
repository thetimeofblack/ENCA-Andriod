                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                     <children>
                        <ComboBox fx:id="contentComboBox" layoutX="31.0" layoutY="13.0" prefHeight="25.0" prefWidth="100.0" />
                     </children>
                  </AnchorPane>
