<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/cleaning_agent_image_detail"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@id/cleaning_agent_image_detail"
        android:layout_toRightOf="@id/cleaning_agent_image_detail"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_name"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_name_detail"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_type"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="Type"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/cleaning_agent_type_detai"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_rate"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="Rate"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/cleaning_agent_rate_detail"
            android:layout_row="2"
            android:layout_column="1" />

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cleaning_agent_image_detail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_mainlanguage"
            android:padding="8dp"
            android:text="Main Language"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_mainlanguage_detail"
            android:padding="8dp"
            android:text="Main Language"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_frequency"
            android:padding="8dp"
            android:text="Frequency"
            android:textStyle="bold"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_frequency_detail"
            android:padding="8dp"
            android:text="Frequency"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_applicationtime"
            android:padding="8dp"
            android:text="Application time"
            android:textStyle="bold"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_applicationtime_detail"
            android:padding="8dp"
            android:text="Application time"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_instruction"
            android:text="Instruction"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleaning_agent_instruction_detail"
            android:text="Instruction"
            android:padding="8dp"
            android:layout_row="3"
            android:layout_column="1" />
        <TextView
            android:id="@+id/cleaning_agent_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:padding="8dp"
            android:text="Description"
            android:textStyle="bold"
            android:layout_row="4"
            android:layout_column="0"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:fillViewport="true"
            android:scrollbars = "vertical"
            android:scrollbarStyle="insideInset">
            <TextView
                android:id="@+id/cleaning_agent_description_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"

                android:padding="8dp"
                android:text="Description" />
        </ScrollView>

    </GridLayout>


</RelativeLayout>
